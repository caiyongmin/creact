{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "pretty": true,
    "sourceMap": false,
    "target": "es6",
    "jsx": "react",
    "lib": ["dom", "es2015", "es2016", "es2017", "esnext"],
    "module": "commonjs",
    "typeRoots": [
      "./../node_modules/@types",
      "typings"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
